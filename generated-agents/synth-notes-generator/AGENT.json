{
  "name": "synth-notes-generator",
  "description": "Autonomous Python agent for generating synthetic clinical SOAP notes",
  "type": "python",
  "version": "1.0.0",
  "module": "agent",
  "class": "SynthNotesAgent",
  "capabilities": [
    "prompt-loading",
    "api-calls",
    "file-operations",
    "batch-processing",
    "cost-tracking"
  ],
  "tags": ["healthcare", "data-generation", "synthetic-data", "clinical", "autonomous"],
  "configuration": {
    "required": ["prompt_type"],
    "optional": {
      "total": {
        "type": "int",
        "default": 10,
        "description": "Total notes to generate"
      },
      "batch_size": {
        "type": "int",
        "default": 2,
        "description": "Notes per API call"
      }
    },
    "prompt_types": {
      "adult": ["adult_trauma", "adult_chronic_lbp", "adult_neck_pain", "adult_sports_injury"],
      "pediatric": ["torticollis", "plagiocephaly", "feeding", "wellness"]
    }
  },
  "dependencies": {
    "python": ">=3.11",
    "packages": ["anthropic"],
    "external": {
      "synthetic-notes": "/Users/mpaz/workspace/synthetic-notes"
    }
  },
  "output": {
    "type": "batch_folder",
    "location": "/Users/mpaz/workspace/synthetic-notes/output/batch_XXX/",
    "format": "markdown",
    "naming": "{prompt_type}_{short_uuid}.md"
  },
  "execution": {
    "mode": "autonomous",
    "timeout": null,
    "max_api_calls": null
  },
  "cost_model": {
    "api": "anthropic",
    "model": "claude-opus-4-1-20250805",
    "pricing": {
      "input": 15.00,
      "output": 75.00,
      "unit": "per_million_tokens"
    },
    "typical_cost": {
      "10_notes": "0.50-2.00",
      "50_notes": "2.50-10.00",
      "100_notes": "5.00-20.00"
    }
  },
  "metadata": {
    "created": "2025-11-20",
    "author": "orchestrator-team",
    "use_case": "Generate realistic clinical training data for chiropractic SOAP notes",
    "pattern": "autonomous-python-agent"
  }
}
