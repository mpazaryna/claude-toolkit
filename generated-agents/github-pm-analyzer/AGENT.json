{
  "name": "github-pm-analyzer",
  "version": "1.0.0",
  "description": "Autonomous agent for GitHub project management analysis - trends, activity reports, and repository sync",
  "entry_point": "agent.py",
  "class_name": "GitHubPMAgent",
  "capabilities": [
    "trend-analysis",
    "daily-activity",
    "repo-sync",
    "issue-tracking"
  ],
  "tasks": [
    {
      "name": "trend_analysis",
      "description": "Compare two issue snapshots to identify trends",
      "parameters": {
        "baseline_snapshot": "Earlier snapshot folder name",
        "current_snapshot": "More recent snapshot folder name"
      }
    },
    {
      "name": "daily_activity",
      "description": "Generate multi-repo commit activity report",
      "parameters": {
        "days": "Number of days to look back (default: 7)"
      }
    },
    {
      "name": "sync_repos",
      "description": "Sync repositories from GitHub with filtering",
      "parameters": {
        "dry_run": "Preview without writing (default: true)"
      }
    },
    {
      "name": "list_snapshots",
      "description": "List available issue data snapshots",
      "parameters": {}
    }
  ],
  "dependencies": [
    "github-pm"
  ],
  "tags": [
    "github",
    "project-management",
    "analytics",
    "reporting"
  ]
}
